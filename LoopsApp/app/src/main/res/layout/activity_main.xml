<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnWhile"
        android:layout_width="383dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:text="@string/whileTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDoWhile"
        android:layout_width="383dp"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:text="@string/doWhileText"
        app:layout_constraintEnd_toEndOf="@+id/btnWhile"
        app:layout_constraintStart_toStartOf="@+id/btnWhile"
        app:layout_constraintTop_toBottomOf="@+id/btnWhile" />

    <Button
        android:id="@+id/btnFor"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:text="@string/forText"
        app:layout_constraintEnd_toEndOf="@+id/btnDoWhile"
        app:layout_constraintStart_toStartOf="@+id/btnDoWhile"
        app:layout_constraintTop_toBottomOf="@+id/btnDoWhile" />

    <Button
        android:id="@+id/btnEnhanced"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="68dp"
        android:text="@string/forEText"
        app:layout_constraintEnd_toEndOf="@+id/btnFor"
        app:layout_constraintStart_toStartOf="@+id/btnFor"
        app:layout_constraintTop_toBottomOf="@+id/btnFor" />

</androidx.constraintlayout.widget.ConstraintLayout>